<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100">

    <org.kymjs.kjframe.widget.RoundImageView
        android:id="@+id/iv_head_icon"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_65"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_person_bg"
        android:contentDescription="@null"
        android:src="@drawable/ic_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:layout_alignTop="@+id/iv_head_icon"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/sp_10"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_toEndOf="@+id/iv_head_icon"
        android:layout_toRightOf="@+id/iv_head_icon"
        android:gravity="center_vertical"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:id="@+id/linear_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="@dimen/dp_200"
                android:text="橙子"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_sex"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_marginStart="@dimen/dp_2"
                android:contentDescription="@null"
                android:src="@drawable/ic_male" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_rank_lev"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_8"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/rank_7" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_live_lev"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_8"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/rank_10"
                android:tintMode="screen" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_user"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxWidth="@dimen/dp_70"
                android:text="映客号"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_inke_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@+id/tv_inke"
                android:gravity="center"
                android:maxWidth="@dimen/dp_70"
                android:text="666"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_eidt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@drawable/arrow_to_right"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center"
                android:text="查看编辑主页"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

